<Window x:Class="games_list_app.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:games_list_app"
        mc:Ignorable="d"
        Title="GamerList" Height="450" Width="800">

    <Window.Resources>

        <Style x:Key="VioletScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="#E8D7F1">
                            <Track Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#E8ACF1"
                                                        CornerRadius="5"
                                                        Margin="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />

            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="GamesDataGrid"
          Grid.Column="0"
          AutoGenerateColumns="False"
          AlternationCount="2"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          Background="White"
          BorderBrush="#FFE0E0E0"
          BorderThickness="1"
          RowHeight="28"
          ColumnHeaderHeight="32"
          HorizontalGridLinesBrush="#FFEFEFEF"
          VerticalGridLinesBrush="#FFEFEFEF"
          SelectionMode="Single"
          ScrollViewer.VerticalScrollBarVisibility="Hidden"
          ScrollViewer.CanContentScroll="True"
          Margin="0,0,10,0"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ItemsSource="{Binding Games}"
          SelectedItem="{Binding SelectedGame}"
                      >

                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD0E4FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>


                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#0582CA"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
                        <Setter Property="Padding" Value="8,0,4,0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                    </Style>

                </DataGrid.Resources>


                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="120">
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="MaxLength" Value="50"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                            <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="*" MinWidth="120">
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="MaxLength" Value="50"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="*" MinWidth="120">
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="MaxLength" Value="50"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Release Year" Binding="{Binding ReleaseYear}" Width="*" MinWidth="120">
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <EventSetter Event="PreviewTextInput" Handler="OnlyNumbers"/>
                                <EventSetter Event="PreviewTextInput" Handler="ValidateHours"/>
                                <Setter Property="MaxLength" Value="4"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Play Time (Hours)" Binding="{Binding PlayTimeHours}" Width="*" MinWidth="150"/>
                    <DataGridCheckBoxColumn Header="Finished" Binding="{Binding IsCompleted}" Width="*" MinWidth="100"/>
                </DataGrid.Columns>


            </DataGrid>


            <ScrollBar x:Name="ExternalScrollBar"
                   Grid.Column="1"
                   VerticalAlignment="Stretch"
                   Orientation="Vertical"
                   Minimum="0"
                   Style="{StaticResource VioletScrollBar}"/>
        </Grid>


        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>

                <ColumnDefinition Width="200"/>

                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="Auto"/>

                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>


            <TextBlock Text="Search"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Foreground="#FF555555"
                   FontWeight="SemiBold"
                   FontFamily="Segoe UI"/>

            <TextBox x:Name="Search_bar"
                 Grid.Column="1"
                 Height="26"
                 Padding="6,2"
                 Background="#E8D7F1"
                 BorderBrush="#FFE0E0E0"
                 BorderThickness="1"
                 TextChanged="Search_bar_TextChanged"/>

            <StackPanel Grid.Column="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            >

            <Button x:Name="Load"
            Content="Load"
            Width="100"
            Height="40"
            Margin="10,0,10,0"
            Click="Load_Button_Click"/>

            <Button x:Name="Save"
            Content="Save"
            Width="100"
            Height="40"
            Margin="0,0,10,0"
            Click="Save_Button_Click"/>

             <Button x:Name="Delete_Button"
            Content="Delete"
            Width="90"
            Height="40"
            Margin="0,0,10,0"
            Click="Delete_Button_Click"/>
            
             <Button x:Name="Edit_Add_Button"
            Content="Add / Edit"
            Width="100"
            Height="40"
            Click="Edit_Add_Button_Click"/>
            </StackPanel>


        </Grid>

    </Grid>


</Window>

